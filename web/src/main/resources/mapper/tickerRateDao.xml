<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jubi.dao.TickerRateDao">

    <resultMap id="rateMap" type="com.jubi.dao.entity.TickerRateEntity">
        <id property="id" column="id"/>
    </resultMap>

    <select id="queryTickerRates" parameterType="com.jubi.dao.vo.TickerRateSpanParam" resultMap="rateMap">
        select pk, coin, rate
        from jb_coin_rate
        where (pk mod #{param.span}) = 0 and coin in
        <foreach collection="param.coins" item="coin" open="(" close=")" separator=",">
            #{coin}
        </foreach>
        <if test="param.start != null">
            and pk &gt;= #{param.start}
        </if>
        <if test="param.end != null">
            and pk &lt; #{param.end}
        </if>
    </select>

    <select id="queryHourTickerRates" parameterType="com.jubi.dao.vo.TickerRateSpanParam" resultMap="rateMap">
        select (pk - 28800) as pk, rate from jb_coin_rate
        where (pk mod #{param.span}) = 0 and coin in
        <foreach collection="param.coins" item="coin" open="(" close=")" separator=",">
            #{coin}
        </foreach>
        <if test="param.start != null">
            and pk &gt;= #{param.start}
        </if>
        <if test="param.end != null">
            and pk &lt; #{param.end}
        </if>
    </select>

    <select id="queryLastPk" resultType="java.lang.Integer">
        SELECT pk from jb_coin_rate order by pk desc limit 1
    </select>

    <select id="queryRankedTickerRate" resultMap="rateMap">
        SELECT coin, rate FROM jb_coin_rate WHERE pk=#{pk} ORDER BY rate DESC;
    </select>


</mapper>
