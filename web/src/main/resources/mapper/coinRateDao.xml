<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jubi.dao.CoinRateDao">

    <resultMap id="rateMap" type="com.jubi.dao.entity.CoinRateEntity">
        <id property="id" column="id"/>
    </resultMap>

    <select id="queryCoinRates" parameterType="com.jubi.dao.vo.CoinRateSpanParam" resultMap="rateMap">
        select pk, coin, rate
        from jb_coin_rate
        where (pk mod #{param.span}) = 0 and coin in
        <foreach collection="param.coins" item="coin" open="(" close=")" separator=",">
            #{coin}
        </foreach>
        <if test="param.start != null">
            and pk &gt;= #{param.start}
        </if>
        <if test="param.end != null">
            and pk &lt; #{param.end}
        </if>
    </select>


</mapper>
